@model Final_ThibanProject.Models.viewmodel.Advertisement

@{
    ViewBag.Title = "NewAdvertisement";
    Layout = "~/Views/Shared/_VenderLayout.cshtml";
}



<!-- Start: Content-Wrapper -->

<div class="right_col" role="main">
    <div class="row mb10 col-md-12  col-sm-12 top-title-bar">
        <h1 class="main-top-header">Thiban Vendor Add Advertisement </h1>
    </div>
    <div class="row mb10 col-md-12 col-sm-12 pr10">
        <div class="inner-header  bred-inner-header mb15">
            <div class="bread-cumLeft">
                <ol class="breadcrumb dash-bred-cumb">
                    <li> <a href="#"> <span><img src="~/Content/assets/img/bred-home.png" /></span> Home</a></li>
                    <li><i class="fa fa-angle-right ml5" aria-hidden="true"></i> </li>
                    <li class="ml5"><a href="~/Advertisement/NewAdvertisement">Vendor Add Advertisement</a></li>
                </ol>
            </div>
        </div>
    </div>

    <!-- Begin: Content -->

    <section id="content" class="table-layout animated fadeIn">

        <!-- begin: .tray-center -->

        <div class="tray tray-center">

            <!-- create new order panel -->

            <div class="panel mb25 mt5 border-round">
                <div class="panel-body ">
                    <div class="tab-content pn br-n admin-form">
                        <div id="tab1_1" class="tab-pane active main-addvertis-header">
                            <div class="heading-title">
                                <h3 class="panel-title role_h3"> Add  Advertisement</h3>
                            </div>
                            <p class="role_p mb25"> Add A Advertisement to Promote your brand </p>
                            <div class="row">
                                @using (Html.BeginForm("NewAdvertisement", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                                {
                                    <div class="form-group">
                                        <label class="control-label col-sm-2 ldl-lft lbl-p-left clr-blck" for="email"><span class="clr-blck"> Title<span class="star-symbol">*</span></span></label>
                                        <div class="col-sm-5 pn">
                                            <input type="text" id="title" name="Title" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2 ldl-lft lbl-p-left" for="pwd"> <span class="clr-blck"> Description</span></label>
                                        <div class="col-sm-5 pn">
                                            <textarea class="form-control resize-no" id="comments" name="Description" rows="5"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2 ldl-lft lbl-p-left pull-left" for="pwd"> Upload a video or Image</label>
                                        <div class="col-sm-5 pn">
                                            <input type="file" class="form-control" value="browse" id="file" name="file" placeholder="browse">
                                        </div>
                                        <div>
                                            <input type="text" style="display:none" name="Type" id="type1" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class=" col-sm-7 ">
                                            <div class="buttonsss">
                                                <input type="submit" class="btn  btn-sm pull-right border-radius99   geo-cancel-btn "
                                                       style="background:#ffffff !important; border-color:#888 !important;" name="actiontype" value="Cancle" />
                                                <input type="submit" class="btn  btn-sm pull-right border-radius99  mr20"
                                                       style="background:#ffffff !important; color:#fff; border-color:#888 !important; background-color:#57ad68 !important;" name="actiontype" id="save" value="Save" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- recent orders table -->

        </div>

        <!-- end: .tray-center -->
        <!-- end: .tray-right -->

    </section>

    <!-- End: Content -->

</div>

<!-- End: Content-Wrapper -->
<!-- Start: Right Sidebar -->
<!--Footer Content-->
<div class="row main-footer">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bg-white">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <p class="font-size-13 pull-right"><span>©2017 all Rights Reserved</span></p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <p class="font-size-13 pull-right"> <span><a href="" class="color-hash">Terms and Conditions |Privacy Police</a>  </span></p>
        </div>
    </div>
</div>

