 <!-- MODAL-START-HERE-->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->

        <div class="modal-content">
            <div class="modal-header">
                <!--<button type="button" class="close" data-dismiss="modal">&times;</button>-->
                <i class="fa fa-times close" aria-hidden="true" data-dismiss="modal"></i>
                <h4 class="modal-title">EDIT ADVERTISEMENT</h4>
            </div>
            <div class="modal-body">
                <div class="popup-content-block">
                    <div class="">
                        <div class="">
                            <form class="form-horizontal">
                                <fieldset>

                                    <!-- Form Name -->
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="requestName">Title Name&nbsp;:</label>
                                        <div class="col-md-8">
                                            <input name="requestName" placeholder="Title Name" class="form-control input-md" required="" type="text">

                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="company_name">Description&nbsp;:</label>
                                        <div class="col-md-8">
                                            <textarea class="form-control" id="comments" name="comments" placeholder="Description"></textarea>


                                        </div>
                                    </div>

                                    <!-- Select Basic -->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="declineType">Type of Advertisement&nbsp;:</label>
                                        <div class="col-md-8">
                                            <select name="declineType" class="form-control pt5">
                                                <option value="Video">Video</option>
                                                <option value="Video">Image</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="submit"></label>
                                        <div class="col-md-4">
                                            <button id="submit" name="submit" class="btn btn-default modal-submit">Submit</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
