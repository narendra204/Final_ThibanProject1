                                                <input type="checkbox" name="mobileos" value="FR">
                                                <span class="checkbox mn"></span>
                                            </label>
                                        </td>
                                        <td id="advid" style="display:none;" data-val-col="Address" data-val="@item.Id" class="">@item.Id</td>
                                        <td class="text-center" data-val-col="Title" data-val="@item.Title">@item.Title</td>
                                        <td class="text-center" data-val-col="Type" data-val="@item.Type">@item.Type</td>
                                        <td class="text-center" data-val-col="Description" data-val="@item.Description">@item.Description</td>
                                        <td><button class="btn btn-default  btn-sm   edit_btn" type="button" data-toggle="modal" data-target="#myModal">Edit</button></td>
