    <link rel="stylesheet" type="text/css" href="~/Content/assets/admin-tools/admin-forms/css/admin-forms.css">


   


</head>


<body class="external-page external-alt sb-l-c sb-r-c login-body">


    <div id="main" class="animated fadeIn">







        @*header end*@


@using (Html.BeginForm("VenderLogin", "Vender"))
{

        <section id="content" class="login-form">

            <div class="admin-form theme-info">



                <!-- Login Logo -->

                <div class="row table-layout"> </div>



                <!-- Login Panel/Form -->

                <div class="panel mt20 mb25">

                    <form method="post" id="contact" class="login-form-vendor">

                        <div class="panel-body bg-light p25 pb15 login-box-div">

                            <span id="errMessage" style="display:none;color:red">UserName Or Password is incorrect</span>

                            <!-- Username Input -->

                            <div class="section">
                                <a href="javascript:" title="THIBAN">

                                    <h1 class="mt5">
                                        THIBAN<br>

                                        <small>Water Delivery</small>
                                    </h1>

                                </a>

                                <label for="username" class="field prepend-icon">

                                    @*<input type="text" name="username" id="username" class="gui-input" placeholder="Username">*@
                                    @Html.TextBoxFor(model => model.username, new { @name = "username", @id = "username", @class = "gui-input", @placeholder = "Username" })
                                    @Html.ValidationMessageFor(model => model.username)

                                </label>

                            </div>



                            <!-- Password Input -->

                            <div class="section">

                                <!-- <label for="username" class="field-label text-muted fs18 mb10">Password</label>-->

                                <label for="password" class="field prepend-icon">

                                    @*<input type="password" name="password" id="password" class="gui-input" placeholder="Password">*@
                                    @Html.PasswordFor(model => model.password, new { @name = "password", @id = "password", @class = "gui-input", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.password)

                                </label>

                            </div>

                            <!--<div class="form-group remember-me">

                              <div class="col-sm-12 pad-no">

                                <div class="col-md-6 pad-no">

                                  <div class="bs-component">

                                    <div class="checkbox-custom checkbox-disabled mb10">

                                      <input type="checkbox" id="checkboxDefault1">

                                      <label for="checkboxDefault1">Remember Me</label>

                                    </div>

                                  </div>

                                </div>

                              </div>

                            </div>-->

                            <div class="sign_text">

                                <p class="sign-p"><span class="" style=" color:#7a7a7a;">By proceding,you agree to Person's </span><span class="sign-fade-clr">Terms </span>&nbsp;and <span class="sign-fade-clr"> Privacy Policy </span></p>

                                <p class="">Having issues in login? <a href="" style="color:#888;">Contact Us</a> </p>

                                <p><a href="~/VenderAccount/ForgotPassword" style="color:#888;">Forgot Password</a></p>

                                <div class="col-md-12 pad-no signin-btn">

                                    @*<a href="vendor-index.php" class="btn btn-primary btn-block">Sign me in</a>*@
                                    <input type="submit" value="Sign me in" class="btn btn-primary btn-block">

                                </div>
                            </div>

                        </div>

                    </form>

                </div>

            </div>

        </section>
    
}

        </div>
    </body> 
</html> 



