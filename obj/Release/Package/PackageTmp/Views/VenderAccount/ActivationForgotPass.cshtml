<body class="external-page external-alt sb-l-c sb-r-c login-body">


    <div id="main" class="animated fadeIn">







        @*header end*@


       @using (Html.BeginForm("ActivationForgotPass", "VenderAccount"))
       {
            <section id="content" class="login-form">

                <div class="admin-form theme-info">



                    <!-- Login Logo -->

                    <div class="row table-layout"> </div>



                    <!-- Login Panel/Form -->

                    <div class="panel mt20 mb25">

                        <form method="post" id="contact" class="login-form-vendor">

                            <div class="panel-body bg-light p25 pb15 login-box-div">

                               

                                <!-- Username Input -->

                                <div class="section">
                                    <a href="javascript:" title="THIBAN">

                                        <h1 class="mt5">
                                            THIBAN<br>

                                            <small>Water Delivery</small>
                                        </h1>
                                        <h2 class="text-center">Forgot Password?</h2>
                                        <p class="text-center" style="color:#888;">You can reset your password here.</p>

                                    </a>

                                    <label for="Password" class="field prepend-icon">

                                        @*<input type="text" name="username" id="username" class="gui-input" placeholder="Username">*@
                                        @Html.PasswordFor(model => model.password, new { @name = "password", @id = "password", @class = "gui-input", @placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.password)

                                    </label>
                                    <br/>
                                    <br/>
                                    <label for="ConfirmPassword" class="field prepend-icon">

                                        @*<input type="text" name="username" id="username" class="gui-input" placeholder="Username">*@
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @name = "ConfirmPassword", @id = "ConfirmPassword", @class = "gui-input", @placeholder = "Confirm Password" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)

                                    </label>

                                </div>



                                <!-- Password Input -->
                                <!--<div class="form-group remember-me">

                                  <div class="col-sm-12 pad-no">

                                    <div class="col-md-6 pad-no">

                                      <div class="bs-component">

                                        <div class="checkbox-custom checkbox-disabled mb10">

                                          <input type="checkbox" id="checkboxDefault1">

                                          <label for="checkboxDefault1">Remember Me</label>

                                        </div>

                                      </div>

                                    </div>

                                  </div>

                                </div>-->

                                <div class="sign_text">



                                    <div class="col-md-12 pad-no signin-btn">
                                        @Html.HiddenFor(model => model.venderid)
                                        @*<a href="vendor-index.php" class="btn btn-primary btn-block">Sign me in</a>*@
                                        <input type="submit" value="Submit" class="btn btn-primary btn-block">

                                    </div>
                                </div>

                            </div>

                        </form>

                    </div>

                </div>

            </section>

        }

    </div>
</body>
</html>



<style>
    span.field-validation-error {
        color: red;
