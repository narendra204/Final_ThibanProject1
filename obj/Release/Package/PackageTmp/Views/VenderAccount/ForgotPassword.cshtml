@model Final_ThibanProject.Models.viewmodel.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}


@*header start*@


<!doctype html>

<html>

<head>

    <!-- Meta, title, CSS, favicons, etc. -->

    <meta charset="utf-8">

    <title>Water Admin</title>

    <meta name="keywords" content="Admin Dashboard" />

    <meta name="description" content="Admin Dashboard">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Font CSS (Via CDN) -->

    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600">


    <!-- Theme CSS -->



    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/css/theme.css">

    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/css/theme2.css">

    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/css/theme3.css">

    <link rel="stylesheet" type="text/css" href="~/Content/assets/skin/css/custom.css">


    <!-- Admin Forms CSS -->

    <link rel="stylesheet" type="text/css" href="~/Content/assets/admin-tools/admin-forms/css/admin-forms.css">





</head>


<body class="external-page external-alt sb-l-c sb-r-c login-body">


    <div id="main" class="animated fadeIn">







        @*header end*@


      @using (Html.BeginForm("ForgotPassword", "VenderAccount"))
      {

            <section id="content" class="login-form">

                <div class="admin-form theme-info">



                    <!-- Login Logo -->

                    <div class="row table-layout"> </div>



                    <!-- Login Panel/Form -->

                    <div class="panel mt20 mb25">

                        <form method="post" id="contact" class="login-form-vendor">

                            <div class="panel-body bg-light p25 pb15 login-box-div">

                                <span id="erremailMessage" style="display:none;color:red">Email ID Not Exists </span>
                                <span id="emailMessage" style="display:none;color:green">Forgot password link sent to  your Email Id,Please click to change your password </span>

                                <!-- Username Input -->

                                <div class="section">
                                    <a href="javascript:" title="THIBAN">

                                        <h1 class="mt5">
                                            THIBAN<br>

                                            <small>Water Delivery</small>
                                        </h1>
                                        <h2 class="text-center">Forgot Password?</h2>
                                        <p class="text-center" style="color:#888;">You can reset your password here.</p>

                                    </a>

                                    <label for="Email ID" class="field prepend-icon">

                                        @*<input type="text" name="username" id="username" class="gui-input" placeholder="Username">*@
                                        @Html.TextBoxFor(model => model.emailid, new { @name = "emailid", @id = "emailid", @class = "gui-input", @placeholder = "Email ID" })
                                        @Html.ValidationMessageFor(model => model.emailid)

                                    </label>

                                </div>



                                <!-- Password Input -->

                              

                                <!--<div class="form-group remember-me">

                                  <div class="col-sm-12 pad-no">

                                    <div class="col-md-6 pad-no">

                                      <div class="bs-component">

                                        <div class="checkbox-custom checkbox-disabled mb10">

                                          <input type="checkbox" id="checkboxDefault1">

                                          <label for="checkboxDefault1">Remember Me</label>

                                        </div>

                                      </div>

                                    </div>

                                  </div>

                                </div>-->

                                <div class="sign_text">

                                  

                                    <div class="col-md-12 pad-no signin-btn">

                                        @*<a href="vendor-index.php" class="btn btn-primary btn-block">Sign me in</a>*@
                                        <input type="submit" value="Submit" class="btn btn-primary btn-block">

                                    </div>
                                </div>

                            </div>

                        </form>

                    </div>

                </div>

            </section>

        }

        </div>
    </body>
</html>



        <style>
            span.field-validation-error {
        color: red;
    }
            .login-form .section h1 {
                margin-bottom: 35px;
            }
        </style>





      
        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                //$("#errMessage").hide();
                if ('@ViewBag.Sent' == "Sent") {
                    $("#emailMessage").show();
                }
                else if ('@ViewBag.Sent' == "failed") {
                    $("#erremailMessage").show();
                }
            });
           
        </script>



